PORT=3000
NODE_ENV=production

# Security - Change this to a strong secret in production
JWT_SECRET=change-this-to-a-secure-random-string
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=200

# Firebase Configuration (Choose Option 1 OR Option 2)

# Option 1: Path to service account file (Recommended for Docker with volume mount)
# Ensure you put your serviceAccountKey.json in the ./config folder on the host
GOOGLE_APPLICATION_CREDENTIALS=/app/config/serviceAccountKey.json

# Option 2: JSON Content string (Alternative if you don't want to mount files)
# FIREBASE_CREDENTIALS='{"type": "service_account", ...}'
